{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 480, 2],
    "object-curly-spacing" : [2, "always"],
    "one-var"              : 0,
    "no-var"               : "error",
    "semi"                 : ["error", "never"],
    "no-extend-native"     : "off",
    "prefer-const"         : [
      "error", {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ]
}
}
